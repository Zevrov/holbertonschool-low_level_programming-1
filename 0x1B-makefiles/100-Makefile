CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic
$(NAME): $(OBJ)
	$(CC) $(SRC) -o $(NAME)
all: m.h $(NAME)
clean:
	$(RM) -f *~ $(NAME)
oclean:
	$(RM) -f $(OBJ)
fclean: clean oclean
re: oclean all
.PHONY: all clean oclean fclean re

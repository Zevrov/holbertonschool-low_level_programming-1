#include <stdlib.h>
#include <stdio.h>
#include "dog.h"

/**
 * print_dog - print dog info
 *
 * @d: input dogs
 */
void print_dog(struct dog *d)
{
	if (d != NULL)
	{
		if ((*d).name != NULL)
			printf("Name: %s\n", (*d).name);
		else
			printf("Name: (nil)\n");
		if ((*d).age != NULL)
			printf("Age: %d\n", (*d).age);
		else
			printf("Name: (nil)\n");
		if ((*d).owner != NULL)
			printf("Name: %s\n", (*d).owner);
		else
			printf("Name: (nil)\n");
	}
}
